{
  "openapi": "3.0.1",
  "info": {
    "title": "SonsMagicos.Api",
    "description": "Teste Backend JCM",
    "contact": {
      "name": "Augusto Junior",
      "url": "https://aejunior.xyz/",
      "email": "hello@aejunior.xyz"
    },
    "version": "v1"
  },
  "paths": {
    "/api/Instrumentos": {
      "get": {
        "tags": [
          "Instrumentos"
        ],
        "summary": "Obtém todos os Instrumentos",
        "operationId": "GetTodosInstrumentos",
        "parameters": [
          {
            "name": "propriedade",
            "in": "query",
            "description": "Filtra por propriedade os Instrumentos.<para />\r\nPor exemplo: <i>dormir</i>",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna lista de Instrumentos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/InstrumentoDTO"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor"
          },
          "404": {
            "description": "Nenhum item foi encontrado"
          }
        }
      },
      "post": {
        "tags": [
          "Instrumentos"
        ],
        "summary": "Cria um Instrumento",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InstrumentoDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/InstrumentoDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/InstrumentoDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Retorna o Instrumento criado"
          },
          "401": {
            "description": "Credenciais inválidas",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor"
          }
        }
      },
      "put": {
        "tags": [
          "Instrumentos"
        ],
        "summary": "Atualiza um Instrumento",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "Id do Instrumento",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InstrumentoDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/InstrumentoDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/InstrumentoDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Retorna o Instrumento atualizado"
          },
          "401": {
            "description": "Credenciais inválidas",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Instrumento não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor"
          }
        }
      }
    },
    "/api/Instrumentos/{id}": {
      "get": {
        "tags": [
          "Instrumentos"
        ],
        "summary": "Obtém Instrumento por Id",
        "operationId": "GetInstrumento",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Por exemplo: <i>1</i>",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna um Instrumento",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InstrumentoDTO"
                }
              }
            }
          },
          "404": {
            "description": "Nenhum item foi encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor"
          }
        }
      },
      "delete": {
        "tags": [
          "Instrumentos"
        ],
        "summary": "Deleta um Instrumento",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna o Instrumento excluído",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InstrumentoDTO"
                }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Instrumento não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor"
          }
        }
      }
    },
    "/api/Instrumentos/ValorPorTipo": {
      "get": {
        "tags": [
          "Instrumentos"
        ],
        "summary": "Calcula o preço total de todos os Instrumentos de um tipo específico",
        "parameters": [
          {
            "name": "tipo",
            "in": "query",
            "description": "Tipo dos Instrumentos",
            "schema": {
              "$ref": "#/components/schemas/TipoInstrumentoDTO"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna o preço total",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "number",
                  "format": "double"
                }
              },
              "application/json": {
                "schema": {
                  "type": "number",
                  "format": "double"
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "InstrumentoDTO": {
        "required": [
          "nome",
          "preco",
          "propriedade",
          "tipo"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nome": {
            "maxLength": 20,
            "minLength": 3,
            "type": "string"
          },
          "tipo": {
            "$ref": "#/components/schemas/TipoInstrumentoDTO"
          },
          "preco": {
            "type": "number",
            "format": "currency"
          },
          "propriedade": {
            "maxLength": 120,
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "TipoInstrumentoDTO": {
        "enum": [
          1,
          2,
          3
        ],
        "type": "integer",
        "format": "int32"
      }
    },
    "securitySchemes": {
      "basic": {
        "type": "http",
        "description": "Autenticação Básica no cabeçalho na requisição.",
        "scheme": "basic",
        "bearerFormat": "basic"
      }
    }
  },
  "security": [
    {
      "basic": [ ]
    }
  ]
}